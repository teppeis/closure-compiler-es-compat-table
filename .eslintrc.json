{
  "root": true,
  "extends": ["teppeis/node-v18", "teppeis/+prettier"],
  "rules": {
    "import/no-unresolved": [2, { "ignore": ["^meow$"] }],
    "n/shebang": "off"
  },
  "overrides": [
    {
      "files": ["legacy/*"],
      "extends": ["teppeis/es5", "teppeis/+node", "teppeis/+prettier"],
      "rules": {
        "n/no-unsupported-features/es-builtins": [
          "error",
          {
            "version": "0.10"
          }
        ],
        "n/no-unsupported-features/es-syntax": [
          "error",
          {
            "version": "0.10"
          }
        ],
        "n/no-unsupported-features/node-builtins": [
          "error",
          {
            "version": "0.10"
          }
        ]
      }
    }
  ]
}
